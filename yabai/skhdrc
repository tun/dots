alt - f : yabai -m window --toggle zoom-fullscreen
alt + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# focus window
alt - l : yabai -m window --focus east
alt - k : yabai -m window --focus north
alt - j : yabai -m window --focus south
alt - h : yabai -m window --focus west

# swap managed window
shift + alt - l : yabai -m window --swap east
shift + alt - k : yabai -m window --swap north
shift + alt - j : yabai -m window --swap south
shift + alt - h : yabai -m window --swap west

# move managed window
shift + cmd - l : yabai -m window --warp east
shift + cmd - k : yabai -m window --warp north
shift + cmd - j : yabai -m window --warp south
shift + cmd - h : yabai -m window --warp west

# move managed window between displays
meh - l : yabai -m window --display 2
meh - h : yabai -m window --display 1

# spaces
shift + alt - c : yabai -m space --create
shift + alt - d : yabai -m space --destroy

# send window to space
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5
ctrl + shift - 6 : yabai -m window --space 6
ctrl + shift - 7 : yabai -m window --space 7
ctrl + shift - 8 : yabai -m window --space 8
ctrl + shift - 9 : yabai -m window --space 9
ctrl + shift - 0 : yabai -m window --space 10

# balance size of windows
shift + alt - backspace : yabai -m space --balance

# toggle window split type
shift + alt - space : yabai -m window --toggle split

# launch terminal sessions
alt - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~/Resuelve
hyper - 1 : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~
alt + shift - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~/Resuelve multipass shell pelana
