[include]
	path = ~/.gitconfig_local
[alias]
	br = branch
	ci = commit
	co = checkout
	d = diff --word-diff
	di = difftool
	dist = diff --stat
	files = ls-files
	last = log -n 1 -s --decorate
	hist = log --stat --graph --oneline --decorate --date=short
	graph = log --color --graph --pretty=format:'%C(bold yellow)%h %C(bold red)%d%Creset %s %Cgreen(%cr) %C(magenta)<%an>%Creset' --abbrev-commit
	orp = checkout --orphan
	repos = remote -v
	st = status --short -sb
	stats = shortlog -e -s -m
	tr = checkout --track -b
	tree = ls-tree -r HEAD
[color]
	ui = always
[log]
	decorate = short
	abbrevCommit = true
[pager]
	status = true
	show-branch = true
[push]
	default = current
[core]
	editor = vim
	quotepath = false
	excludesfile = ~/.gitignore_global
[diff]
	tool = vimdiff
[color "diff"]
	old = red strike
	new = green italic
[merge]
	tool = vimdiff
[difftool]
	prompt = false
[pull]
	rebase = true
[init]
	defaultBranch = master
[include]
	path = ~/.gitconfig_local
